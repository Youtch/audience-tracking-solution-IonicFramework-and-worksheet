<!-- views/pages/configurer.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
  
  <link rel="stylesheet" href="configurer.css" type="text/css">
  <%- include('../partiels/head.ejs') %>
  <!--See other EJS dependancies at end of the script-->
  
  <!--Javascript dependancies-->
  <%- include("header-loader.js") %>
  <%- include("utils-ajax.js") %>
  <%- include("configurer.js") %>
</head>
<body class="container">

<header>
  <%- include('../partiels/header.ejs') %>
</header>

<!--Modals features used to display messages about server's working-->
<%- include('../partiels/peupler-modale.ejs') %>
<%- include('../partiels/peupler-modale.js') %>

<main>
  <div class="card text-center">
  
    <div class="card" width="1000px"> <!--about width : it homogenizes the components -->
    <!--page's card start-->

      <h5 class="panneauDescription-titre">Connection to <em>Firebase Database</em></h5>
      
      <div class="card-body" style="text-align:center !important"><!-- body start-->
        
        <label for="databaseUrl">Database URL</label>
        <div class="input-group mb-3">
          <input type="text" aria-label="Database URL" class="form-control full-width" id="input-databaseUrl" maxlength="100">
        </div>

        <label for="serviceAccount">ServiceAccount file name</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">/src/assets/</span>
          </div>
          <input type="text" aria-label="ServiceAccount file name" class="form-control  full-width" id="input-serviceAccount" maxlength="100">
        </div>

        <div class="alert alert-warning estCache" role="alert" id="div-msgEchec-validateurCnxFbDb">Connection error : check the <b>network connection</b>, and then check the <b>URL</b> and the <b>serviceAccount file name</b> !</div>
        <button id="submit" type="button" class="btn btn-primary btn-lg btn-block"  id="btn-enreg-validateurCnxFbDb" onclick='setConfiguration()'>Save</button>
      
      </div><!-- body end-->
    </div>
  </div><!--page's card end-->
  <BR>
</main>

<footer>
  <%- include('../partiels/footer.ejs') %>
</footer>

</body>
</html>