<!-- views/pages/telecharger.ejs -->

<!DOCTYPE html>
<html lang="fr">
<head>

	<link rel="stylesheet" href="telecharger.css" type="text/css">
	<%- include('../partiels/head.ejs') %>
	<!--See other EJS dependancies at end of the script-->
	
  	<!--Javascript dependancies-->
    <%- include('utils-ajax.js') %>
    <%- include('header-loader.js') %>
	<%- include ('telecharger.js') %>
</head>
<body class="container">

<header>
	<%- include('../partiels/header.ejs') %>
</header>

<!--Modals features used to display messages about server's working-->
<%- include('../partiels/peupler-modale.ejs') %>
<%- include('../partiels/peupler-modale.js') %>

<main>
	
	<div class="text-center estMontre" id="div-dernierFichier-estVide">
	  <img class="text-center" style="margin:10px 0" src="file.svg" width="64px" height="64px">
	  <p class="text-center">No file were generated on this session</p>
	</div>

	<div class="card text-center estCache" id="div-dernierFichier-nonVide">	
	  <div class="card-body">
	  	<!--Use case : one file was generated on this session-->
		<button id="btn-downloadDernierFichierCsv" type="button" class="btn btn-primary btn-lg btn-block" onclick='lancerTelechargement()'><i class="fas fa-download"></i><!--Filled by AJAX request--></button>
		<h6 id="h6-detail-downloadDernierFichierCsv"><!--Filled by AJAX request-->
		</h6>
		<!--Use case : any file was not yet generated on this session-->
	  </div>
	</div>
	
	<h6 style="background: #cecece; border-radius:5px; padding: 10px">
		Previous generated files : history
	</h6>

	

	<div class="text-center estMontre"  id="div-listFichier-estVide">
	  <img class="text-center" style="margin:10px 0" src="unknown-document.svg" width="64px" height="64px">
	  <p class="text-center">There is not yet any files.</p>
	</div>
	<ul class="estCache"  id="ul-listFichier-nonVide">
	</ul>

</main>

<footer>
	<%- include('../partiels/footer.ejs') %>
</footer>

</body>
</html>